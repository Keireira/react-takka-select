{
	"presets": [
		"@babel/preset-env",
		"@babel/preset-typescript",
		["@babel/preset-react", {
			"useBuiltIns": true
		}]
	],

	"plugins": [
		"react-hot-loader/babel",
		["@babel/plugin-proposal-decorators", {
			"legacy": true
		}],
		["@babel/plugin-proposal-class-properties", {
			"loose": true
		}],
		"@babel/plugin-proposal-object-rest-spread",
		["babel-plugin-styled-components", {
			"displayName": true,
			"minify": false
		}]
	]
}
