{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "react",
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,

		"moduleResolution": "node",

		"baseUrl": "src",
		"paths": {
			"@local/helpers": ["helpers/index"],
			"@local/helpers/*": ["helpers/*"],

			"@local/components": ["components/index"],
			"@local/components/*": ["components/*"],

			"@local/constants": ["constants"],
			"@local/context": ["context"]
		},
	},
	"exclude": [
		"./node_modules/**/*"
	]
}
