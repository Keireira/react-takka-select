{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "react",
		"allowJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@local/helpers": ["helpers/index"],
			"@local/helpers/*": ["helpers/*"],

			"@local/components": ["components/index"],
			"@local/components/*": ["components/*"],

			"@local": ["./index"],
			"@local/*": ["./*"]
		},
	},
	"exclude": [
		"./node_modules/**/*"
	]
}
